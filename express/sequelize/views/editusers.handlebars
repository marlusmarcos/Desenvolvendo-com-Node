<h1>Editando o usuário {{this.name}}</h1>

<form class = "form-main" action="/users/edit" method="POST">
    <div class="form-control">
        <input type="hidden" name="id" value="{{this.id}}">
        <label for="name" >Nome</label>
        <input type="text" name="name" placeholder="Digite seu nome" value="{{this.name}}">
    </div>
    <div class="form-control">
        <label for="ocuppation" >Profissão</label>
        <input type="text" name="ocuppation" placeholder="Digite sua profissão"  value="{{this.ocuppation}}">
    </div>
    <div class="form-control form-checkbox">
        <input type="checkbox" name="newsLatter" checked>
        <label for="newsLatter" >Enviar Promoções?</label>
    </div>
    
    <input type="submit" value="Enviar">
   
  
</form>

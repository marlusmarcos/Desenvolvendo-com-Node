<h1>Cadastrando Usuário</h1>

<form class = "form-main" action="/users/create" method="POST">
    <div class="form-control">
        <label for="name" >Nome</label>
        <input type="text" name="name" placeholder="Digite seu nome">
    </div>
    <div class="form-control">
        <label for="ocuppation" >Profissão</label>
        <input type="text" name="ocuppation" placeholder="Digite sua profissão">
    </div>
    <div class="form-control form-checkbox">
        <input type="checkbox" name="newsLatter" checked>
        <label for="newsLatter" >Enviar Promoções?</label>
    </div>
    
    <input type="submit" value="Enviar">
   
  
</form>
